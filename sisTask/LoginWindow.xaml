<Window x:Class="sisTask.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sisTask"
        mc:Ignorable="d"
        Title="Авторизация" Height="301" Width="261" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="0,0,0,135">
        <TextBlock Text="Введите логин:" />
        <TextBox Name="LoginTBox" />
        <TextBlock Text="Введите пароль:" />
        <PasswordBox Name="PasswordPBox" />

        <Button Content="Войти"
                Name="LogISnBtn"
                Click="LogInBtn_Click"/>
        <Button Content="Регистрация"
                x:Name="RegISnBtn"
                Click="RegInBtn_Click"/>
    </StackPanel>
</Window>
